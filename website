    // Simple interactivity: Highlight active nav link
    const navLinks = document.querySelectorAll('nav a');
    navLinks.forEach(link => {
      link.addEventListener('click', () => {
        navLinks.forEach(l => l.style.color = '#4b2e17');
        link.style.color = '#fff';
